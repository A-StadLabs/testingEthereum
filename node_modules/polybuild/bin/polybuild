// jshint node: true
'use strict';

var path = require('path');
var vfs = require('vinyl-fs');
var polybuild = require('../index');
var nopt = require('nopt');
var gutil = require('gulp-util');

var args = nopt(
  {
    'maximum-crush': Boolean,
    'suffix': String
  },
  {
    'mc': ['--maximum-crush'],
    's': ['--suffix']
  }
);

var maximumCrush = args['maximum-crush'];
var suffix = args['suffix'];
var source = args.argv.remain[0];

if (!source) {
  throw 'Missing input file';
}

vfs.src([source])
  .pipe(polybuild({maximumCrush: maximumCrush, suffix: suffix}))
  .pipe(vfs.dest(
    path.dirname(source)
  ))
  .on('error', function() {
    process.exit(1);
  })
;
